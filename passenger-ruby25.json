{
  "description": "Create mjonuschat/baseimage Docker image",
  "variables": {
    "docker_username": "{{env `DOCKER_USERNAME`}}",
    "docker_password": "{{env `DOCKER_PASSWORD`}}"
  },
  "sensitive-variables": ["docker_password"],
  "builders": [
    {
      "type": "docker",
      "image": "mjonuschat/baseimage:latest",
      "commit": true
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "scripts/prepare.sh"
      ]
    },
    {
      "type": "chef-solo",
      "json": {
        "container_passenger": {
          "node": {
            "enabled": true,
            "version": "node_10.x"
          },
          "ruby": {
            "enabled": true,
            "versions": ["2.5.3"]
          }
        }
      },
      "cookbook_paths": [
        "cookbooks"
      ],
      "run_list": [
        "container_passenger"
      ],
      "prevent_sudo": true,
      "skip_install": false
    },
    {
      "type": "shell",
      "scripts": [
        "scripts/remove-chef.sh",
        "scripts/cleanup.sh"
      ]
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "mjonuschat/passenger-ruby25",
        "tag": "latest"
      },
      {
        "type": "docker-push",
        "login": "true",
        "login_username": "{{user `docker_username`}}",
        "login_password": "{{user `docker_password`}}"
      }
    ]
  ]
}
